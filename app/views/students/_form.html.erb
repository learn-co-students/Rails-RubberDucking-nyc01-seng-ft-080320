<% if flash[:errors] %>
    <% flash[:errors].each do |e| %>
        <%= e %><br>
    <% end %>
<% end %>

<%= form_for @student do |f| %>
   <b> <%= f.label :name %> </b>
    <%= f.text_field :name %> <br>

   <b> <%= f.label :mod %> </b>
    <%= f.text_field :mod %> <br>

    <%= f.submit %>
<% end %>