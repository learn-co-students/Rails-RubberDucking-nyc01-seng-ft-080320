<% if flash[:errors] %>
    <ul>
        <% flash[:errors].each do |error| %>
            <li><%= error %></li>
        <% end %>
    </ul>
<% end %>

<h1>Duck Form</h1>

<%= form_for @duck do |f| %>
<b><%= f.label :name %></b><br>
<%= f.text_field :name %>
<br>
<br>
<b><%= f.label :description %></b><br>
<%= f.text_area :description %>
<br>
<br>
<%= f.collection_select :student_id, Student.all, :id, :name %>
<br>
<br>
<%= f.submit %>

<% end %>