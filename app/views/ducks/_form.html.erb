<% if flash[:errors] %>
    <% flash[:errors].each do |error| %>
        <%= error %>
    <% end %>
<% end %>


<%= form_for @duck do |f| %>
    <div>
        <p><%= f.label :name %></p>
        <p><%= f.text_field :name %></p>
    </div>

    <div>
        <p><%= f.label :description %></p>
        <p><%= f.text_field :description %></p>
    </div>

    <div>
        <p><%= f.label :student %></p>
        <p><%= f.collection_select :student_id, Student.all, :id, :name %></p>
    </div>

<%= f.submit %>
<% end%>